{
    "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/ES2015",
    "sourceMap": false,
    "importHelpers": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": false,
    "rootDir": "tmp/ES2015",
    "allowUnreachableCode": true,
    "target": "es2015",
    "jsx": "react",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ],
    "baseUrl": ".",
    "paths": {
      "igniteui-webcomponents-core/ES2015/*": ["node_modules/@infragistics/igniteui-webcomponents-core/ES2015/*"],
      "igniteui-webcomponents-charts/ES2015/*": ["node_modules/@infragistics/igniteui-webcomponents-charts/ES2015/*"],
      "igniteui-webcomponents-grids/ES2015/*": ["node_modules/@infragistics/igniteui-webcomponents-grids/ES2015/*"],
      "igniteui-webcomponents-gauges/ES2015/*": ["node_modules/@infragistics/igniteui-webcomponents-gauges/ES2015/*"],
      "igniteui-webcomponents-datasources/ES2015/*": ["node_modules/@infragistics/igniteui-webcomponents-datasources/ES2015/*"]
    },
  },
    "exclude": [
      "dist/**/*.ts"
    ],
    "include": [
      "tmp/ES2015/**/*.ts",
      "tmp/ES2015/**/*.tsx"
    ]
    
  }
